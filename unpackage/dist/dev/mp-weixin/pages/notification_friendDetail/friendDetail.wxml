<view class="inform"><block wx:if="{{!friendList.length>0}}"><text class="defaultText">暂时没有新的通知</text></block><block wx:for="{{friendList}}" wx:for-item="item" wx:for-index="from" wx:key="from"><view class="itemBar"><view class="notInfoDetContent"><view class="headContent"><image src="/static/images/theme@2x.png"></image></view><view class="infoContent"><text class="itemName">{{item.from}}</text><text>申请添加您为好友</text></view></view><view class="buttonContent"><block wx:if="{{!item.typeText}}"><view class="rejectBtn" data-from="{{item.from}}" data-event-opts="{{[['tap',[['reject',['$event']]]]]}}" bindtap="__e">拒绝</view></block><block wx:if="{{!item.typeText}}"><view class="centerLine"></view></block><block wx:if="{{!item.typeText}}"><view class="agreeBtn" data-from="{{item.from}}" data-event-opts="{{[['tap',[['agree',['$event']]]]]}}" bindtap="__e">同意</view></block><block wx:if="{{item.typeText}}"><view class="actionDone">{{item.typeText}}</view></block></view></view></block></view>